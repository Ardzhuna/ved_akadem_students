- provide(:title, resource["title_#{locale}"])

.questionnaire
  = simple_form_for resource, url: answer_path do |f|
    %h2
      = resource["title_#{locale}"]
    .description
      = resource["description_#{locale}"]
    %br

    = render 'shared/error_messages', object: f.object

    .questions
      = f.simple_fields_for :questions do |q|
        = render "question_#{q.object.format}", q: q, person: current_person

    = f.button :submit
