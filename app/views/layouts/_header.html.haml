%header.navbar.navbar-inverse.navbar-fixed-top{ role: 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle{ type: 'button', 'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse' }
        %span.sr-only
          Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'VedAkademStudents', root_path, class: 'navbar-brand'
    .collapse.navbar-collapse
      %ul.nav.navbar-nav.navbar-right
        %li
          = link_to locale_label, '#', class: 'change_locale'
        %li
          - if person_signed_in?
            = link_to(t('devise.links.sign_out'), destroy_person_session_path, method: :delete)
          - else
            = link_to(t('devise.links.sign_in'), new_person_session_path)
