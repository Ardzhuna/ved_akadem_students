- provide(:title, t('devise.links.sign_up'))

%h1
  = t('devise.links.sign_up')

.row.vert-offset-top-2
  = simple_nested_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render 'shared/error_messages', object: f.object

    .row.form-inputs
      .col-xs-12.col-sm-6
        = f.input :photo, as: :file, wrapper: :vertical_file_input, required: false
        = f.input :photo_cache, as: :hidden
        = f.input :passport, as: :file, wrapper: :vertical_file_input, required: false
        = f.input :passport_cache, as: :hidden
        = f.input :email, required: true, autofocus: true
        = f.input :password, required: true
        = f.input :password_confirmation, required: true
        = f.input :spiritual_name
        = f.input :name
        = f.input :middle_name
        = f.input :surname
        = render 'shared/nested_telephones', f: f
        = f.input :gender, collection: [['Male', true], ['Female', false]], required: true
        = f.input :birthday, start_year: Date.today.year - 80, end_year: Date.today.year - 12, required: true
        = f.input :edu_and_work
        = f.input :emergency_contact

    .row.form-actions
      .col-xs-12.col-sm-6
        = f.button :submit, t('devise.links.sign_up')
