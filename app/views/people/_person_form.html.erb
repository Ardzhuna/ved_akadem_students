<%= form_for @person do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.label      :spiritual_name %>
  <%= f.text_field :spiritual_name %>
  <br>
  <%= f.label      :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label      :middle_name %>
  <%= f.text_field :middle_name %>
  <br>
  <%= f.label      :surname %>
  <%= f.text_field :surname %>
  <br>
  <%= f.label      :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label       :telephone %>
  <%= f.phone_field :telephone %>
  <br>
  <%= f.label  :gender %>
  <%= f.select :gender, options_for_select([["Male", true], ["Female", false]]), { prompt: "select..." } %>
  <br>
  <%= f.label       :birthday %>
  <%= f.date_select :birthday, { prompt: "select...", start_year: 1940 } %>
  <br>
  <%= f.label      :edu_and_work, "Education and job" %>
  <%= f.text_field :edu_and_work %>
  <br>
  <%= f.label      :emergency_contact %>
  <%= f.text_field :emergency_contact %>
  <br><br>
  <%= f.submit class: "btn" %>
<% end %>