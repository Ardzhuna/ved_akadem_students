.row
  .col-xs-12
    %h2.text-center
      Change your password

.row.vert-offset-top-1
  .col-xs-12.col-sm-offset-3.col-sm-6.col-md-offset-4.col-md-4
    = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
      = f.error_notification

      = f.input :reset_password_token, as: :hidden
      = f.full_error :reset_password_token

      .form-inputs
        = f.input :password, label: 'New password', autofocus: true
        = f.input :password_confirmation, label: 'Confirm your new password'

      .form-actions
        = f.button :submit, 'Change my password', class: 'col-xs-12'

.row.vert-offset-top-2
  .col-xs-12.col-sm-offset-3.col-sm-6.col-md-offset-4.col-md-4
    = render 'devise/shared/links'
