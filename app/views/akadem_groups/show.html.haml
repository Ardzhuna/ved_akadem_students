- provide(:title, @akadem_group.group_name)

.row
  %h1.col-xs-12
    = @akadem_group.group_name

  .col-xs-12.clearfix
    .pull-right
      - if policy(@akadem_group).edit?
        = link_to t('links.edit'), edit_akadem_group_path(@akadem_group), class: 'btn btn-xs btn-primary'
      - if policy(@akadem_group).destroy?
        = link_to t('links.delete'), akadem_group_path(@akadem_group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger'

  .col-xs-12
    .row
      .col-xs-3.col-sm-2
        = "#{t('activerecord.attributes.akadem_group.establ_date')}:"
      .col-xs-9.col-sm-10
        = @akadem_group.establ_date.to_s
    - if @akadem_group.group_description.present?
      .row
        .col-xs-3.col-sm-2
          = "#{t('activerecord.attributes.akadem_group.group_description')}:"
        .col-xs-9.col-sm-10
          = @akadem_group.group_description
    .row
      .col-xs-3.col-sm-2
        = t('.active_students_count')
      .col-xs-9.col-sm-10
        = @akadem_group.active_student_profiles.count
    - if @akadem_group["message_#{locale}"].present?
      .row
        .col-xs-3.col-sm-2
          = t('static_pages.home.message_for_group')
        .col-xs-9.col-sm-10
          = @akadem_group["message_#{locale}"]

  - if [@akadem_group.curator, @akadem_group.administrator, @akadem_group.praepostor].any?
    %h4.col-xs-12.text-center
      = t('.group_servants')
    .col-xs-12
      %table.table.table-condensed
        %tbody
          - %i[curator administrator praepostor].each do |servant_role|
            - if @akadem_group.send(servant_role).present?
              %tr
                %td
                  = t(".#{servant_role.to_s}")
                %td
                  = person_photo(@akadem_group.send(servant_role), :thumb)
                %td
                  = @akadem_group.send(servant_role).complex_name
                %td
                  = @akadem_group.send(servant_role).email
                %td
                  = @akadem_group.send(servant_role).telephones.pluck(:phone).join(', ')




