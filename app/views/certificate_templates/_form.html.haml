= simple_form_for @certificate_template do |f|
  = render 'shared/error_messages', object: f.object

  = f.input :title
  = f.input :background, wrapper: :vertical_file_input, as: :file
  = f.input :background_cache, as: :hidden

  = f.button :button, class: 'btn btn-submit col-xs-12' do
    %span.glyphicon.glyphicon-refresh.spinner{ aria: { hidden: true } }
    = submit_label
